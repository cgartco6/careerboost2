# CareerBoost Afrihost Production Configuration
NODE_ENV=production
PORT=5000
MONGODB_URI=mongodb://careerboost_user:your_password@localhost/careerboost
JWT_SECRET=generate_secure_jwt_secret_here
ENCRYPTION_KEY=generate_32_char_encryption_key_here
OPENAI_API_KEY=your_openai_api_key_here
FRONTEND_URL=https://yourdomain.co.za
REACT_APP_API_URL=https://yourdomain.co.za/api
BASE_URL=https://yourdomain.co.za

# Payment Gateways - Afrihost Compatible
FNB_MERCHANT_ID=your_fnb_merchant_id
FNB_MERCHANT_KEY=your_fnb_merchant_key
FNB_SECRET_KEY=your_fnb_secret_key
PAYFAST_MERCHANT_ID=your_payfast_merchant_id
PAYFAST_MERCHANT_KEY=your_payfast_merchant_key
PAYFAST_PASSPHRASE=your_payfast_passphrase

# Security
ADMIN_TOKEN=generate_secure_admin_token_here

# Afrihost MySQL Database
DB_HOST=localhost
DB_PORT=3306
DB_NAME=careerboost
DB_USER=careerboost_user
DB_PASS=your_secure_password

# Email Configuration (Afrihost)
SMTP_HOST=mail.yourdomain.co.za
SMTP_PORT=587
SMTP_USER=info@yourdomain.co.za
SMTP_PASS=your_email_password

# Performance
MAX_FILE_UPLOAD=10MB
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX=100
