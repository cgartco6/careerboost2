# Application Settings
NODE_ENV=production
FRONTEND_URL=https://yourdomain.co.za
REACT_APP_API_URL=https://yourdomain.co.za/api
BASE_URL=https://yourdomain.co.za

# Database Configuration
MONGODB_URI=mongodb://careerboost_admin:your_secure_password@mongodb:27017/careerboost?authSource=careerboost
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=your_mongo_root_password

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=your_redis_password

# Security Keys (Generate secure random strings)
JWT_SECRET=your_64_character_jwt_secret_here
ENCRYPTION_KEY=your_32_character_encryption_key_here
ADMIN_TOKEN=your_admin_dashboard_token_here

# AI Services
OPENAI_API_KEY=your_openai_api_key_here

# Payment Gateways - FNB
FNB_MERCHANT_ID=your_fnb_merchant_id
FNB_MERCHANT_KEY=your_fnb_merchant_key
FNB_SECRET_KEY=your_fnb_secret_key

# Payment Gateways - PayFast
PAYFAST_MERCHANT_ID=your_payfast_merchant_id
PAYFAST_MERCHANT_KEY=your_payfast_merchant_key
PAYFAST_PASSPHRASE=your_payfast_passphrase

# Email Service (Optional)
SMTP_HOST=your_smtp_host
SMTP_PORT=587
SMTP_USER=your_smtp_username
SMTP_PASS=your_smtp_password

# Monitoring (Optional)
SENTRY_DSN=your_sentry_dsn_here
LOG_LEVEL=info
